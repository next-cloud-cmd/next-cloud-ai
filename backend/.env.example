# Next Cloud AI Environment Configuration
# Copy this file to .env and update the values

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration (for future use)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=next_cloud_ai
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# Security Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_2025
JWT_EXPIRES_IN=24h

# API Configuration
API_VERSION=v1
API_RATE_LIMIT=100

# External Services (for future use)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
S3_BUCKET_NAME=next-cloud-ai-storage

# Email Configuration (for future use)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Monitoring (for future use)
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn

# CORS Configuration
CORS_ORIGIN=https://your-username.github.io
